<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".
    MainActivity" android:background="#2F9C34"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.14"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25dp" android:textColor="@color/white"
        android:text="რეგისტრაცია" android:id="@+id/textView"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/surname"
        android:textColorHint="@color/white"
        android:hint="გვარი" android:inputType="textPersonName"
        android:ems="10"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="300dp"
        app:layout_constraintStart_toStartOf="@+id/surname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="@+id/surname"
        android:id="@+id/phonenumb"
        android:textColorHint="@color/white"
        android:hint="ტელეფონის ნომერი" android:inputType="textPersonName" android:ems="10" app:layout_constraintTop_toBottomOf="@+id/surname"/>

    <EditText android:layout_height="wrap_content" android:layout_width="300dp" app:layout_constraintStart_toStartOf="@+id/surname" app:layout_constraintEnd_toEndOf="@+id/surname" android:id="@+id/name" android:textColorHint="@color/white" android:hint="სახელი" android:inputType="textPersonName" android:ems="10" app:layout_constraintBottom_toTopOf="@+id/surname"/>

    <EditText android:layout_height="wrap_content" android:layout_width="300dp" app:layout_constraintStart_toStartOf="@+id/phonenumb" app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="@+id/phonenumb" android:id="@+id/persnumb" android:textColorHint="@color/white" android:hint="პირადო ნომერი" android:inputType="textPersonName" android:ems="10" app:layout_constraintTop_toBottomOf="@+id/phonenumb" android:layout_marginTop="4dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:text="რეგისტრაცია" android:id="@+id/Button" app:layout_constraintTop_toBottomOf="@+id/persnumb" android:backgroundTint="@color/teal_200" android:layout_marginBottom="128dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>